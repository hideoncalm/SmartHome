<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartHome" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_388E3C</item>
        <item name="colorPrimaryVariant">@color/green_388E3C</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_388E3C</item>
        <item name="colorSecondaryVariant">@color/green_388E3C</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/green_388E3C</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RoundedImage">
        <item name="cornerSize">25dp</item>
    </style>

    <style name="RoundedImage20">
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
    </style>

    <style name="RoundedImage20Bot">
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/black</item>
        <item name="colorSwitchThumbNormal">@color/green_388E3C</item>
    </style>
</resources>
