<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/bg_rounded_stroke_white"
    android:elevation="5dp">

    <ImageView
        android:id="@+id/imageHome"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_living_room"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textHouseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/lato"
        android:text="Mikami Home"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/imageHome"
        app:layout_constraintTop_toBottomOf="@id/imageHome"
        app:layout_constraintEnd_toEndOf="@id/imageHome"/>

    <TextView
        android:id="@+id/textTotalRooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/lato"
        android:text="5 rooms"
        app:layout_constraintStart_toStartOf="@id/textHouseName"
        app:layout_constraintTop_toBottomOf="@id/textHouseName" />

</androidx.constraintlayout.widget.ConstraintLayout>